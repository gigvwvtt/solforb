@using Microsoft.AspNetCore.Mvc.TagHelpers
@model project.ViewModels.CreateOrderViewModel
@{
    ViewData["Title"] = "Новый заказ";
    Layout = "_Layout";
}
<h1>@ViewData["Title"]</h1>

<div class="main-container" align="center">
    <h1>@ViewData["Title"]</h1>
    <div class="w-25">
        <form class="mt-3" method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()

            <div style="display: none" class="form-group">
                <input type="hidden" id="Id" name="Id" asp-for="Id"/>
            </div>

            <div class="mb-3 form-group">
                <label asp-for="Number" class="control-label"></label>
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control", placeholder = "Номер заказа" })
                @Html.ValidationMessageFor(m => m.Number, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3 align-items-center row form-group">
                <div class="col"> @Html.LabelFor(m => m.Date, "Дата заказа")</div>
                <div class="col">
                    @Html.EditorFor(m => m.Date, new { htmlAttributes = new { @class = "form-control", placeholder = "Дата заказа" } })
                    @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 form-group">
                <label asp-for="Provider" class="control-label"></label>
                @Html.TextBoxFor(m => m.Provider.Name, new { @class = "form-control", placeholder = "Поставщик", list = "datalistOptions" })
                <datalist id="datalistOptions">
                    @foreach (var provider in ViewBag.AvailableProviders)
                    {
                        <option>@provider</option>
                    }
                </datalist>
                @Html.ValidationMessageFor(m => m.Provider, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input class="btn btn-outline-success float-start" type="submit" value="Сохранить"/>
                <a class="btn btn-outline-secondary float-end" asp-controller="Order" asp-action="Index">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}